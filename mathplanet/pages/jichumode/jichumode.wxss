.allgrade {
  position: relative;
  left: 0rpx;
  top: 91rpx;
  width: 280px;
  height: 120px;
  border-radius: 15px;
  /* background-color: rgb(182, 220, 253); */
  /* display: flex; */
  backdrop-filter: blur(20px);
  /* 毛玻璃效果 */
  -webkit-backdrop-filter: blur(20px);
  /* 兼容Safari */
  border-radius: 50px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  /* 半透明边框 */
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.1),
