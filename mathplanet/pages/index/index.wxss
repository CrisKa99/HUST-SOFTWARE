/* 卡片内部：左图右文，行星尽量大以撑满卡片 */
.module-grid {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  padding: 12rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.module-card {
  width: 100%;
  flex: 1;
  min-height: 120rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(0, 0, 0, 0.04));
  box-shadow: 0 10rpx 24rpx rgba(4, 24, 48, 0.18);
  display: flex;
  align-items: stretch;
  box-sizing: border-box;
  padding: 0;
  /* border-radius: 112rpx; */

}

.module-card:nth-child(1) {
  background: linear-gradient(135deg, #74a5ef 0%, #a3d498 100%);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);

}

.module-card:nth-child(2) {
  background: linear-gradient(135deg, #d8d8aa 0%, #7b98f1 100%);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

.module-card:nth-child(3) {
  background: linear-gradient(135deg, #f4d2ab 0%, #ef8d99 100%);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

.module-card:nth-child(4) {
  background: linear-gradient(135deg, #f6b2f0 0%, #ebebaa 100%);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

/* 卡片内部容器 */
.planet-card {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
}

/* 左侧行星容器：约占 46% 宽度，行星撑满此容器 */
.planet-left {
  flex: 0 0 46%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  box-sizing: border-box;
  height: 100%;
  /* overflow: hidden; */
  overflow: visible;
  /* 添加这个确保有高度 */
  min-height: 120rpx;
  /* 确保最小高度 */
  border-radius: 50%;
}

/* 行星本体：占左侧容器的大部分并为圆形 */
.planet-surface,
.planet-surface3 {
  width: 230rpx !important;
  /* 明确尺寸 */
  height: 220rpx !important;
  /* 明确尺寸 */
  max-width: 100%;
  max-height: 100%;
  display: block;
  object-fit: cover;
  /* image 时生效 */
  overflow: visible;
  border-radius: 50%;
  /* box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.28), inset 0 -8rpx 16rpx rgba(0, 0, 0, 0.12); */
}

.planet-surface3 {
  overflow: hidden;
}

