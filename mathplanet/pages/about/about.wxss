  width: 100%;
  height: 100%;
  z-index: -2;
  filter: blur(2rpx);
  /* background-color: rgba(252, 252, 252, 0.4); */
}


.stars {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: -1;
}

.stars::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    radial-gradient(5px 5px at 20px 30px, #eee, transparent),
    radial-gradient(5px 5px at 40px 70px, rgba(255, 255, 255, 0.8), transparent),
    radial-gradient(5px 5px at 90px 40px, #fff, transparent),
    radial-gradient(5px 5px at 130px 80px, rgba(255, 255, 255, 0.6), transparent),
    radial-gradient(5px 5px at 160px 30px, #fff, transparent);
  background-repeat: repeat;
  background-size: 200px 100px;
  animation: starsMove 20s linear infinite;
}

@keyframes starsMove {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(-100px);
  }
}

