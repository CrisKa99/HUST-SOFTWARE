.wordfill-page {
  height: 100vh;
  background: linear-gradient(135deg, #ffddf5 0%, #eef3c4 100%);
  position: relative;
  overflow: hidden;
}

.word-swiper {
  height: 100vh;
  /* 占满屏幕 */
}

.slide {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent !important;
}

.slide-inner {
  /* width: 100%;
  padding: 40rpx;
  box-sizing: border-box;*/
  text-align: center;
  width: 90%;
  max-width: 700rpx;
  height: 733rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chinese {
  font-size: 48rpx;
  color: #333;
  margin-bottom: 60rpx;
  font-weight: 600;
  text-align: center;
}

.word-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  margin-bottom: 40rpx;
  
}

.char-cell {
  width: 120rpx;
  /* 单字母格子宽度，填满感更强 */
  height: 120rpx;
  margin: 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.letter-input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 56rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0;
  background: rgba(255, 255, 255, 0.9);
}

.letter-show {
  font-size: 56rpx;
  color: #333;
}

.submit-area {
  margin-top: 20rpx;
}

.submit-btn {
  width: 360rpx;
  height: 80rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.overlay {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
  /* 半透明但允许看到下方红色背景 */
  background: rgba(255, 255, 255, 0);
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
}

.list {}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #eee;
}

.left {
  width: 40%;
  padding-left: 10rpx;
  font-size: 30rpx;
  color: #333;
}

.right {
  width: 60%;
  padding-right: 10rpx;
}

.answer-input {
  width: 100%;
  height: 56rpx;
  padding: 10rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.footer {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.submit-btn {
  width: 420rpx;
  height: 64rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 8rpx;
}

.result {
  margin-top: 14rpx;
  color: #666;
  font-size: 28rpx;
}

.word-box {
  display: flex;
  align-items: center;
}

.char-cell {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.letter-input {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 32rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0;
}

.letter-show {
  font-size: 32rpx;
  color: #333;
}

/* 按钮样式 */
.next-btn {
  width: 360rpx;
  height: 72rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.retry-btn {
  width: 280rpx;
  height: 64rpx;
  background: #FF9800;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 18rpx;
  margin-bottom: 25rpx;
}

.show-btn {
  width: 200rpx;
  height: 64rpx;
  background: #2196F3;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* 保证单词区域尽量撑满宽度 */
.slide-inner {
  width: 100%;
  padding: 60rpx 24rpx;
  box-sizing: border-box;
}

.word-box {
  justify-content: center;
  flex-wrap: nowrap;
  max-width: 100%;
  overflow: auto;
}